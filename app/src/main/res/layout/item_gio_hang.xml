<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.1"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_giohang"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/button_border_cua_hang"
                android:src="@drawable/combo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                android:gravity="right|bottom"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_muagiohang"
                    android:layout_width="65dp"
                    android:layout_height="25dp"
                    android:background="@drawable/button_border_goc"
                    android:gravity="center"
                    android:text="Mua"
                    android:textColor="#000" />

                <Button
                    android:id="@+id/txt_giagiohang"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/button_border_goc"
                    android:gravity="center"
                    android:text="Giá"
                    android:textColor="#000" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_tenspgiohang"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/button_border_tensp"
            android:gravity="center"
            android:maxLines="2"
            android:singleLine="false"
            android:text="Tên sản phẩm"
            android:textColor="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_trangthaigiohang"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@drawable/button_border_goc"
                android:gravity="center"
                android:text="Trạng thái"
                android:textColor="#000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnxoa_giohang"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@drawable/button_border_goc"
                android:text="Xóa khỏi giỏ hàng"
                android:textColor="#000" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>