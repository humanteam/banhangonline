<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="107dp"
    android:layout_weight="1"
    android:background="@drawable/button_border_layout_gio_hang"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_giohang"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/gio_hang_boder"
            android:padding="5dp"
            android:src="@drawable/combo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_tenspgiohang"
                    android:layout_width="109dp"
                    android:layout_height="70dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/gio_hang_boder"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:padding="5dp"
                    android:singleLine="false"
                    android:text="Tên sản phẩm"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/txt_trangthaigiohang"
                    android:layout_width="109dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/gio_hang_boder"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="5dp"
                    android:singleLine="false"
                    android:text="Trạng thái"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <LinearLayout
                        android:layout_width="75dp"
                        android:layout_height="70dp">

                        <Button
                            android:id="@+id/txt_giagiohang"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="@drawable/gio_hang_boder"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Giá"
                            android:textColor="#000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="75dp"
                        android:layout_height="70dp">

                        <TextView
                            android:id="@+id/txt_soluonggiohang"
                            android:layout_width="75dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/gio_hang_boder"
                            android:gravity="center"
                            android:src="@drawable/don_hang_boder"
                            android:text="Số lượng"
                            android:textColor="#000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/gio_hang_boder"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btnxoa_giohang"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_weight="0.1"
                            android:background="@android:drawable/ic_delete"
                            android:textColor="#000" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <Button
                        android:id="@+id/btn_muagiohang"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gio_hang_boder"
                        android:text="Đặt Mua"
                        android:textColor="#000" />


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>