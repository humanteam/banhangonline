<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/don_hang_boder"
            android:gravity="center"
            android:text="Tên khách hàng"
            android:textColor="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/don_hang_boder"
            android:gravity="center"
            android:text="Số điện thoại"
            android:textColor="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/don_hang_boder"
            android:gravity="center"
            android:text="Địa chỉ nhận hàng"
            android:textColor="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/don_hang_boder"
            android:gravity="center"
            android:text="Tên mặt hàng"
            android:textColor="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/don_hang_boder"
            android:gravity="center"
            android:text="Số lượng"
            android:textColor="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/don_hang_boder"
            android:gravity="center"
            android:text="Đơn giá"
            android:textColor="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/don_hang_boder"
            android:gravity="center"
            android:text="Thành tiền"
            android:textColor="#000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.09"
        android:orientation="vertical"
        android:weightSum="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:textColor="#000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:textColor="#000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:textColor="#000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:textColor="#000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:textColor="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/dongia"
                android:layout_width="192dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:textColor="#000" />

            <TextView

                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="0dp"
                android:layout_toEndOf="@+id/dongia"
                android:layout_toRightOf="@+id/dongia"
                android:background="@drawable/don_hang_boder"
                android:gravity="center"
                android:text="VND"
                android:textColor="#000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/thanhtien"
                android:layout_width="192dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:textColor="#000" />

            <TextView

                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="0dp"
                android:layout_toEndOf="@+id/thanhtien"
                android:layout_toRightOf="@+id/thanhtien"
                android:background="@drawable/don_hang_boder"
                android:gravity="center"
                android:text="VND"
                android:textColor="#000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/guidonhang"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/don_hang_boder"
                android:gravity="center"
                android:text="Gửi đơn hàng"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
