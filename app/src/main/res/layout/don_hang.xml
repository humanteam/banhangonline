<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.17"
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/don_hang_boder"
                    android:gravity="center"
                    android:text="Tên khách hàng"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/don_hang_boder"
                    android:gravity="center"
                    android:text="Số điện thoại"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/don_hang_boder"
                    android:gravity="center"
                    android:text="Địa chỉ nhận hàng"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/don_hang_boder"
                    android:gravity="center"
                    android:text="Tên mặt hàng"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/don_hang_boder"
                    android:gravity="center"
                    android:text="Số lượng"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/don_hang_boder"
                    android:gravity="center"
                    android:text="Đơn giá"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/don_hang_boder"
                    android:gravity="center"
                    android:text="Thành tiền"
                    android:textColor="#000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.09"
                android:orientation="vertical"
                android:weightSum="1">

                <EditText
                    android:maxLength="200"
                    android:id="@+id/edt_khachhang"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/colorline"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:textColor="#000"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/edt_sdt"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:backgroundTint="@color/colorline"
                    android:inputType="phone"
                    android:textColor="#000"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/edt_diachi"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/colorline"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:textColor="#000"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/txt_tenmathang"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:textColor="#000"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/edt_soluong"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:inputType="number"
                    android:text="1"
                    android:backgroundTint="@color/colorline"
                    android:textColor="#000"
                    android:textSize="17dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_dongia"
                        android:layout_width="192dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="17dp" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginRight="0dp"
                        android:layout_toEndOf="@+id/txt_dongia"
                        android:layout_toRightOf="@+id/txt_dongia"
                        android:background="@drawable/don_hang_boder"
                        android:gravity="center"
                        android:text="VND"
                        android:textColor="#000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_thanhtien"
                        android:layout_width="192dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textSize="17dp"
                        android:text="1"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginRight="0dp"
                        android:layout_toEndOf="@+id/txt_thanhtien"
                        android:layout_toRightOf="@+id/txt_thanhtien"
                        android:background="@drawable/don_hang_boder"
                        android:gravity="center"
                        android:text="VND"
                        android:textColor="#000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_xacnhan"
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/don_hang_boder"
                        android:gravity="center"
                        android:text="Gửi đơn hàng"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
