        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="tên sản phẩm"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="40dp"
